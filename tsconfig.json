{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"strict": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
